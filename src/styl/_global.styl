body
  font-family: 'Fira Sans', sans-serif
  $ultraThin()

ul, li
  list-style: none

fieldset
  padding: 0
  margin: 0
  outline: none
  border: none

a
  cursor pointer

button
  outline none
  border none
  background none
  cursor pointer

.container
  width: 1140px
  margin: 0 auto
  box-sizing: border-box

  +respond-from($large)
    width: 1360px

  +respond-to($medium)
    width: 936px

  +respond-to($small)
    width: 720px

  +respond-to($xsmall)
    width: calc(100% - 32px)

select
  visibility: hidden

.link
  position: relative
  color: #188DFC
  cursor pointer
  line-height 20px
  &:after
    content: ''
    position: absolute
    bottom: 0
    left: 0
    height: 1px
    background: #8CC6FE
    width: 100%
    transition: .25s

  &:hover
    &:after
      background: transparent

.semibold
  font-weight: 600
