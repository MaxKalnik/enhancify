.select-hidden
  display: none
  visibility: hidden
  padding-right: 10px

.select
  cursor: pointer
  display: inline-block
  position: relative
  font-size: 14px
  color: #525F66
  line-height: 24px
  font-weight: 300
  width: 212px
  height: 48px

.select-styled
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  padding: 12px 16px
  border-radius: 3px
  border: 1px solid #DBE2E7
  @include transition(all 0.25s)
  background: #F3F8FA
  &:after
    content:""
    width: 12px
    height: 12px
    position: absolute
    top: 16px
    right: 16px
    transition: .25s
    background: url('images/icons/ic_expand.svg') center no-repeat

  &:active, &.active
    &:after
      transform: rotate(-180deg)

.select-options
  display: none
  position: absolute
  top: 56px
  right: 0
  left: 0
  margin: 0
  padding: 0
  list-style: none
  width: 100%
  border: 1px solid #dbe2e7
  border-radius: 3px
  box-sizing: border-box
  z-index: 1
  &:before
    content: ''
    width: 10px
    height: 7px
    position: absolute
    top: -6px
    left: 50%
    transform: translateX(-50%)
    background: url(images/svg/triangle-dark.svg)

  li
    display: block
    font-size: 14px
    color: #525F66
    line-height: 32px
    font-weight: 300
    padding: 12px 16px
    background: #F3F8FA
    border-bottom: 1px solid #dbe2e7
    font-size: 14px
    line-height: 24px
    transition: .25s
    &:last-child
      border-bottom: none

    &:hover
      font-weight: 600
      background: #F1F8FF

    &[rel="hide"]
      display: none
