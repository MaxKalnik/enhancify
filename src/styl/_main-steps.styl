.main-steps
  background #f5fafc

.main-steps__wrapper
  display flex
  flex-direction column
  align-items center
  @extend .container
  padding 64px 0 113px 0

  +respond-to($medium)
    padding 64px 0 170px 0

  +respond-to($small)
    padding 48px 0 125px 0

  +respond-to($xsmall)
    padding 32px 0 86px 0

.main-steps__items
  margin 48px 0 80px 0

  +respond-to($medium)
    margin 64px 0

  +respond-to($small)
    margin 48px 0

  +respond-to($xsmall)
    margin 48px 0 32px 0

.main-steps__item
  width 100%
  position relative
  background: #fff
  box-shadow: 0 18px 32px 0 rgba(156,173,173,0.20)
  border-radius: 6px
  margin-bottom 80px
  padding 48px
  box-sizing border-box
  display flex
  flex-direction column
  justify-content center
  align-items center
  &:last-child
    margin-bottom 0

  +respond-to($medium)
    margin-bottom 64px
    padding 48px
    &:last-child
      margin-bottom 0

  +respond-to($small)
    margin-bottom 42px
    padding 24px
    &:last-child
      margin-bottom 0

  +respond-to($xsmall)
    margin-bottom 40px
    padding 16px
    &:last-child
      margin-bottom 0

  &:nth-child(odd)
    padding-left 474px
    +respond-to($medium)
      padding-left 328px

    +respond-to($small)
      padding-left 264px

    +respond-to($xsmall)
      padding-left 16px
      .main-steps__item-title
        padding-left 95px

  &:nth-child(even)
    padding-right 474px
    +respond-to($medium)
      padding-right 328px

    +respond-to($small)
      padding-right 264px

    +respond-to($xsmall)
      padding-right 16px
      .main-steps__item-title
        padding-right 95px

.main-steps__item--first
  height 382px
  +respond-to($medium)
    height 366px

  +respond-to($small)
    height 360px

  +respond-to($xsmall)
    height auto

.main-steps__item--second
  height 382px
  +respond-to($medium)
    height 372px

  +respond-to($small)
    height 360px

  +respond-to($xsmall)
    height auto

.main-steps__item--third
  height 464px
  +respond-to($medium)
    height 412px

  +respond-to($small)
    height 496px

  +respond-to($xsmall)
    height auto

.main-steps__item--last
  height 416px
  +respond-to($medium)
    height 352px

  +respond-to($small)
    height 360px

  +respond-to($xsmall)
    height auto

.main-steps__item-img
  position absolute
  width 320px
  height 456px
  +respond-to($medium)
    width 235px
    height 320px

  +respond-to($small)
    width 206px
    height 280px

  +respond-to($xsmall)
    width 91px
    height 124px

