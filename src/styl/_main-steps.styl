.main-steps__item-title
  font-weight 700
  font-size: 30px
  color: #293033
  line-height: 40px
  margin-bottom 24px

  +respond-to($xsmall)
    margin-top 24px
    font-size 24px
    line-height 32px
    margin-bottom 40px

.main-steps__item-text
  font-weight 400
  font-size: 16px
  color: #525f66
  line-height: 28px
  margin-bottom 28px
  &:last-child
    margin-bottom 0

  +respond-to($xsmall)
    font-size 14px
    line-height 24px

.main-steps__item-link
  @extend .link

.main-steps__btn
  @extend .btn-with-lock
  width 294px
  +respond-to($xsmall)
    width 100%
    img
      left 50%
      transform translateX(-50%)
