  height 436px
  top -39px
  left 103px
  +respond-to($medium)
    width 162px
    height 320px
    top -14px
    left 86px

  +respond-to($small)
    width 142px
    height 280px
    left 70px
    top 59px

  +respond-to($xsmall)
    width 63px
    height 124px
    top -4px
    left 30px

