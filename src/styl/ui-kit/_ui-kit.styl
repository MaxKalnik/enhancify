.ui-kit__wrapper
  padding 80px 0
  @extend .container
  .ui-kit__btns
    background #f5fafc

  .ui-kit__inputs
    background #fff

.ui-kit__row
  margin-bottom 32px

.ui-kit__btns
  .ui-kit__row
    +respond-to($xsmall)
      flex-direction column

.btn-big
  @extend .btn-with-lock
  margin-right 24px
  width 294px
  padding 16px 60px

  +respond-to($small)
    padding 16px

  +respond-to($xsmall)
    width 100%
    margin-bottom 24px

.btn-big--disabled
  @extend .btn-with-lock--disabled
  margin-right 24px

.btn-middle
  @extend .btn-with-lock
  padding-top 12px
  padding-bottom 12px
  margin-right 24px
  width 294px

  +respond-to($xsmall)
    width 100%
    margin-bottom 24px

.btn-middle--disabled
  @extend .btn-with-lock--disabled
  padding-top 12px
  padding-bottom 12px
  margin-right 24px

.btn-outline
  @extend .green-btn
  margin-right 24px
  margin-right 24px
  +respond-to($xsmall)
    margin-bottom 24px

.btn-filled
  @extend .green-btn-filled
  margin-right 24px
  padding 11px 32px
  +respond-to($xsmall)
    margin-bottom 24px

.open-dialog
  border 1px solid #d2dbe0
  border-radius 3px
  padding 16px 24px
  font-size 14px
  line-height 28px
  &:hover
    background rgba(#D1D1D1, .1)

.ui-kit__row--inputs
  display flex
  flex-direction row
  justify-content space-between
  +respond-to($xsmall)
    flex-direction column

  .form__fieldset-input-wrapper
    margin-bottom 0
    width calc(50% - 16px)
    +respond-to($xsmall)
      margin-bottom 30px
      width 100%

.ui-kit__row--checkbox
  display flex
  flex-direction row
  justify-content space-between

  +respond-to($xsmall)
    flex-direction column

  .form__fieldset-input-wrapper
    margin-bottom 0
    width calc(50% - 16px)
    +respond-to($xsmall)
      margin-bottom 24px
      width 100%

.ui-kit__row--radio
  display flex
  flex-direction row
  justify-content space-between

  +respond-to($xsmall)
    flex-direction column

  .form__fieldset-input-wrapper
    margin-bottom 0
    width calc(50% - 16px)
    +respond-to($xsmall)
      margin-bottom 24px
      width 100%
