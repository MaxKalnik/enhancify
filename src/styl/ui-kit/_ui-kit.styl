.ui-kit__wrapper
  padding 80px 0
  @extend .container
  .ui-kit__btns
    background #f5fafc

  .ui-kit__inputs
    background #fff

.ui-kit__row
  margin-bottom 32px

.btn-big
  @extend .btn-with-lock
  margin-right 24px

.btn-big--disabled
  @extend .btn-with-lock--disabled
  margin-right 24px

.btn-middle
  @extend .btn-with-lock
  padding-top 12px
  padding-bottom 12px
  margin-right 24px

.btn-middle--disabled
  @extend .btn-with-lock--disabled
  padding-top 12px
  padding-bottom 12px
  margin-right 24px

.btn-outline
  @extend .green-btn
  margin-right 24px

.btn-filled
  @extend .green-btn-filled
  margin-right 24px

.open-dialog
  border 1px solid #d2dbe0
  border-radius 3px

.ui-kit__row--inputs
  display flex
  flex-direction row
  justify-content space-between

  .form__fieldset-input-wrapper
    margin-bottom 0
    width calc(50% - 16px)

.ui-kit__row--checkbox
  display flex
  flex-direction row
  justify-content space-between

  .form__fieldset-input-wrapper
    margin-bottom 0
    width calc(50% - 16px)
