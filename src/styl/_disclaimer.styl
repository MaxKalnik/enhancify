.disclaimer
  background #f5fafc

.disclaimer__wrapper
  @extend .container
  padding 64px 0 134px 0

  +respond-to($medium)
    padding 64px 0 118px 0

  +respond-to($small)
    padding 48px 0 118px 0

  +respond-to($xsmall)
    padding 32px 0 48px 0

.disclaimer__items
  padding 48px
  background: #fff
  box-shadow: 0 18px 32px 0 rgba(156,173,173,0.20)
  border-radius: 6px
  margin-top 48px

  +respond-to($small)
    margin-top 32px

  +respond-to($xsmall)
    margin-top 24px

.disclaimer__item
  display flex
  margin-bottom 32px
  &:last-child
    margin-bottom 0

  +respond-to($xsmall)
    flex-direction column
    margin-bottom 24px
    &:last-child
      margin-bottom 0

.disclaimer__item-text-container
  display flex
  flex-direction column

.disclaimer__date
  font-weight 400
  font-size: 16px
  color: #8fA7b3
  text-align: center
  line-height: 28px
  margin-top 16px

  +respond-to($small)
    margin-top 8px

.disclaimer__item-title
  font-weight 500
  font-size: 18px
  color: #293033
  line-height: 24px
  min-width 224px
  margin-right 64px
  box-sizing border-box

  +respond-to($medium)
    width 208px
    margin-right 72px

  +respond-to($small)
    min-width 192px
    margin-right 48px

  +respond-to($xsmall)
    min-width 100%
    margin-bottom 16px
    margin-right 0

.disclaimer__item-text
  font-weight 400
  font-size: 16px
  color: #525f66
  line-height: 28px
  margin-bottom 28px
  &:last-child
    margin-bottom 0

.disclaimer__item-link
  @extend .link

