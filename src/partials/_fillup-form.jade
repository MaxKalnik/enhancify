include ./_svg-mixins

form.form(action='', method='POST')
  fieldset.form__fieldset.form__fieldset--info
    h2.form__fieldset-title
      +loan_info_svg
      | Loan Information

    button.form__fieldset-ad-btn(type='button')
      | Advertiser Disclosure

    .form__fieldset-wrapper
      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--full
        label.form__fieldset-label(for='loan-amount')
          | Loan Amount Requested

        .range
          input.form__fieldset-input-range.range__input(name='loan-amount')
          input.range__slider(data-from="2000", data-max="61000", data-min="1000", data-step="100")

      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--full
        label.form__fieldset-label(for='loan-purpose')
          | Loan Purpose

        select.form__fieldset-select(name='loan-purpose' data-placeholder='Select Use of Funds')
          option(value='1') Option 1
          option(value='2') Option 2
          option(value='3') Option 3

      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--full
        label.form__fieldset-label(for='cc-debt-amount')
          | Credit Card Debt Amount

        select.form__fieldset-select(name='cc-debt-amount' data-placeholder='None')
          option(value='1') Option 1
          option(value='2') Option 2
          option(value='3') Option 3
          option(value='4') Option 4
          option(value='5') Option 5

  fieldset.form__fieldset.form__fieldset--your-info
    h2.form__fieldset-title
      +your_info_svg
      | Your Information

    .form__fieldset-wrapper
      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--half
        label.form__fieldset-label(for='first-name')
          | First Name

        input.form__fieldset-input(type='text', name='first-name', id='first-name' placeholder='Enter your first name')
        .form__fieldset-input-warning
          | Enter first name

      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--half
        label.form__fieldset-label(for='last-name')
          | Last Name

        input.form__fieldset-input(type='text', id='last-name' name='last-name', placeholder='Enter your last name')
        .form__fieldset-input-warning
          | Enter last name

      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--half
        label.form__fieldset-label(for='email')
          | Email

        input.form__fieldset-input(type='email', id='email' name='email', placeholder='example@mail.com')
        .form__fieldset-input-warning
          | Invalid email

      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--half
        label.form__fieldset-label(for='phone')
          | Contact Phone

        input.form__fieldset-input(type='tel', id='phone', name='phone', placeholder='+1-800-900-9664')
        .form__fieldset-input-warning
          | Invalid phone number

      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--half
        label.form__fieldset-label(for='street-address')
          | Street Address

        input.form__fieldset-input(type='text', id='street-address', name='street-address', placeholder='Enter your street address')
        .form__fieldset-input-warning
          | Invalid Street Address

      .form__fieldset-input-wrapper.form__fieldset-input-wrapper--half
        label.form__fieldset-label(for='city')
          | City

        input.form__fieldset-input(type='text', id='city' name='city', placeholder='Enter your city name')
